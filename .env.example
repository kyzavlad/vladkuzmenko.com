NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id
NEXT_PUBLIC_HOTJAR_VERSION=your_hotjar_version

# CDN and Base URL
NEXT_PUBLIC_CDN_URL=your_cdn_url
NEXT_PUBLIC_BASE_PATH=/fitness
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PWA=true

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ERROR_TRACKING_ENABLED=true

# Security
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
NEXT_PUBLIC_RATE_LIMIT_MAX=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW_MS=900000

# Mobile Optimization
NEXT_PUBLIC_ENABLE_MOBILE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_TOUCH_GESTURES=true

# Testing
NEXT_PUBLIC_ENABLE_TESTING_MODE=false
NEXT_PUBLIC_MOCK_API_RESPONSES=false

# Development
NEXT_TELEMETRY_DISABLED=1 