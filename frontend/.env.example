# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_ASSET_URL=https://assets.aivideoplatform.com
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001

# Authentication
NEXT_PUBLIC_AUTH_DOMAIN=auth.aivideoplatform.com
NEXT_PUBLIC_AUTH_CLIENT_ID=your-auth-client-id
NEXT_PUBLIC_AUTH_AUDIENCE=https://api.aivideoplatform.com
NEXT_PUBLIC_AUTH_COOKIE_NAME=auth_token
NEXT_PUBLIC_AUTH_COOKIE_DOMAIN=localhost

# Payment Integration
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key
NEXT_PUBLIC_STRIPE_PRICE_ID_BASIC=price_basic_xxx
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO=price_pro_xxx
NEXT_PUBLIC_STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_xxx

# Feature Flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_AI_PROCESSING=true
NEXT_PUBLIC_ENABLE_REAL_TIME_COLLABORATION=false
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_ENABLE_AVATAR_GENERATION=true
NEXT_PUBLIC_ENABLE_VIDEO_EDITING=true
NEXT_PUBLIC_ENABLE_TRANSLATIONS=true

# Video Processing
NEXT_PUBLIC_MAX_VIDEO_SIZE=100 # In MB
NEXT_PUBLIC_SUPPORTED_VIDEO_FORMATS=mp4,webm,mov
NEXT_PUBLIC_MAX_VIDEO_DURATION=300 # In seconds
NEXT_PUBLIC_DEFAULT_VIDEO_QUALITY=1080p
NEXT_PUBLIC_MAX_DURATION=3600

# Token System
NEXT_PUBLIC_FREE_TOKENS_AMOUNT=100
NEXT_PUBLIC_TOKEN_REFRESH_INTERVAL=3600000

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_ERROR_REPORTING_DSN=your-error-reporting-dsn
NEXT_PUBLIC_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Cache Configuration
NEXT_PUBLIC_CACHE_VERSION=1.0.0
NEXT_PUBLIC_CACHE_MAX_AGE=3600

# Development
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_API_MOCK=false
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_API_MOCKING=false

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_WINDOW=60000

# Avatar Generation
NEXT_PUBLIC_MAX_SCRIPT_LENGTH=1000 # In characters
NEXT_PUBLIC_SUPPORTED_AVATAR_STYLES=realistic,cartoon,anime

# Translation
NEXT_PUBLIC_DEFAULT_SOURCE_LANG=auto
NEXT_PUBLIC_DEFAULT_TARGET_LANG=en

# Storage
NEXT_PUBLIC_STORAGE_URL=https://storage.googleapis.com/your-bucket
NEXT_PUBLIC_CDN_URL=https://cdn.bolt.new

# Error Reporting
